<%- include('./partials/_header.ejs') -%>

<section id="complaints">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center">
                    <h1 class="display-5">Düşünceleriniz bizim için değerli</h1>
                    <p class="fs-4 my-3">Şikayet ve Önerilerinizi Bize Yazın</p>
                </div>
                <div class="row">
                    <div class="col-lg-12  mt-5">
                        <% if (typeof flash !== 'undefined' && flash.error) { %>
                            <div class="alert alert-danger">
                              <%= flash.error && flash.error[0] %>
                            </div>
                          <% } %>
                          <% if (flash && flash.success) { %>
                            <div class="alert alert-success">
                              <%= flash.success %>
                            </div>
                          <% } %>
                        <form class="mx-auto p-3 rounded-2" action="/complaint" method="post">
                            <div class="mb-3">
                                <label for="complainterName" class="form-label fs-5">E-Mailiniz</label>
                                <input required type="email" class="form-control" name="complainterName" id="complainterName" placeholder="E-Mail'inizi giriniz...">
                            </div>

                            <div class="mb-3">
                                <label for="complaintSubject" class="form-label fs-5">Konu</label>
                                <input required type="text" class="form-control" name="complaintSubject" id="complaintSubject" placeholder="Şikayet veya öneri konusunu yazınız...">
                            </div>
                            <div class="mb-3">
                                <label for="complaintDescription" class="form-label fs-5">Öneri veya Şikayetiniz</label>
                                <textarea required class="form-control" name="complaintDescription" id="complaintDescription" rows="3" placeholder="Şikayet veya önerinizi yazın..."></textarea>
                            </div>

                            <div class="mb-3">
                                <select class="form-select form-select-lg mb-3" id="complaintCategory" name="complaintCategory" aria-label=".form-select-lg example">
                                    <option disabled selected>Türü seçiniz</option>
                                    <option value="Şikayet">Şikayet</option>
                                    <option value="Öneri">Öneri</option>
                                  </select>
                            </div>
                            <button class="btn btn-success w-100" type="submit">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('./partials/_footer.ejs') -%>